{
    admin off
    persist_config off
    auto_https off
    debug
    log {
        format json
        level DEBUG
    }
    servers {
        trusted_proxies static private_ranges 100.0.0.0/8
    }
}

:{$PORT:8080} {
    log {
        format json
    }

    handle /health {
        respond "OK" 200
    }

    handle /api/* {
        uri strip_prefix /api
        reverse_proxy https://go-pet-care-production.up.railway.app 
    }

    handle /* {
        root * /app/dist
        encode gzip
        file_server {
            precompressed gzip
        }
        try_files {path} /index.html
    }
}